/*========================================
 * Return Value :
 * Parameters :
 * Description :
 * ========================================*/
void Menu_Display_Handling_Task(void *param)
{
	BaseType_t queue_status;
	const char *menu_msg = "===========================\n"
						   "|           Menu          |\n"
						   "===========================\n"
						   "LED Control           --->0\n"
			               "Exit                  --->1\n"
						   "Enter your choice: ";
	queue_status = xQueueSend(print_queue, (const void *)menu_msg , portMAX_DELAY);
}

/*========================================
 * Return Value :
 * Parameters :
 * Description :
 * ========================================*/
void Print_Handling_Task(void *param)
{
	char *msg;
	BaseType_t xQueueReceive(print_queue, (void *)msg, portMAX_DELAY);
}


